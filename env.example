HORIZON_TRIES=3
HORIZON_TIMEOUT=60
HORIZON_MEMORY=128

# Laravel Telescope
TELESCOPE_ENABLED=true

# Laravel Pulse
PULSE_ENABLED=true
PULSE_RECORDING_ENABLED=true

# ClickHouse (Optional)
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USERNAME=default
