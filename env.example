# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1
SANCTUM_GUARD=web

# Laravel Octane
OCTANE_SERVER=swoole
OCTANE_HTTP_SERVER_PORT=8000
OCTANE_HTTP_SERVER_WORKERS=4
OCTANE_HTTP_SERVER_TASK_WORKERS=4
OCTANE_HTTP_SERVER_MAX_REQUESTS=500
